#include<bits/stdc++.h>
using namespace std;
int main(){
  int t;
  cin>>t;
  while(t--){
    long long n,s1=0,s2=0,even=0,odd=0;
    cin>>n;
    long long a[n];
    for(long long i=0;i<n;i++){
      cin>>a[i];
      if(i%2==0){
        s1+=a[i];
        even++;
      }
      else{
        s2+=a[i];
        odd++;
      }
    }
      
    if(s1%even==0 && s2%odd==0 && (s1/even == s2/odd))
    cout<<"YES"<<endl;
    else
    cout<<"NO"<<endl;
    }
      }
    
