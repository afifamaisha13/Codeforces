#include<bits/stdc++.h>
using namespace std;

void solve()
{
    
    int n,k;
    cin>>n>>k;
    string s;
    cin>>s;
    
    int sleep=0,awake=0;
    
    for(int i=0;i<n;i++){
      if(s[i]=='1'){
        awake=i+k+1;
      }
      
      else if(s[i]=='0' && i>=awake)
      sleep++;
    }
    
    cout<<sleep<<endl;
}

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }

}

