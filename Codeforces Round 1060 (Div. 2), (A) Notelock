#include<bits/stdc++.h>
using namespace std;
#define ll long long

void solve()
{
    
   int n,k;
   cin>>n>>k;
   string s;
   cin>>s;
   int c=0;
   for(int i=0;i<n;i++){
        int l=max(0,i-k+1);
     if(s[i]=='1'  && !count(s.begin()+l, s.begin()+i,'1'))
     //it checks number of 1 from the k-1 elemnt to the i-th element and max(0,i-k+1) is used in case if k-1 becomes 0 then we should take range from[0,i].
     c++;
   }
   
   cout<<c<<endl;
    
    
}

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }

}

