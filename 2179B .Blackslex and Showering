#include<bits/stdc++.h>
using namespace std;
#define ll long long

void solve()
{
    
   int n;
   cin>>n;
   ll a[n+1];
   for(int i=1;i<=n;i++)
   cin>>a[i];
   ll sum=0;
   for(int i=2;i<=n;i++)
   sum+=abs(a[i]-a[i-1]);
   
   ll ans=min(sum-abs(a[2]-a[1]) , sum-abs(a[n]-a[n-1]));

   for(int i=2;i<n;i++){
   ll value=sum-abs(a[i]-a[i+1])-abs(a[i]-a[i-1])+abs(a[i+1]-a[i-1]);
   ans=min(ans,value);
   
   }
   
  
   cout<<ans<<endl;
    
    
}

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }

}

