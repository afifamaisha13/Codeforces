#include<bits/stdc++.h>
using namespace std;
#define ll long long

void solve()
{
    
    ll n;
    cin>>n;
    
    ll hao=0;
    while(n>2){
    hao++;
    n=n-2;
    }
    cout<<hao<<endl;
}

int main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);

    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }

}

